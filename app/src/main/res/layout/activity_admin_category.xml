<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add new Product"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26sp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/slogan_category"
       android:id="@+id/linear1_category_layout"
       android:orientation="horizontal"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:layout_marginTop="45dp">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:src="@drawable/tshirts"
           android:id="@+id/t_shirts"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:src="@drawable/sports"
           android:id="@+id/sports_t_shirts"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:src="@drawable/female_dresses"
           android:id="@+id/female_dresses"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:src="@drawable/sweather"
           android:id="@+id/sweters"/>


   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            android:id="@+id/glasses"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            android:id="@+id/purses_bags_wallets"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            android:id="@+id/hats"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:id="@+id/shoes"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            android:id="@+id/headphones"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            android:id="@+id/laptop_pc"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            android:id="@+id/watches"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            android:id="@+id/mobilephones"/>


    </LinearLayout>

</RelativeLayout>